<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.panel-corners" path="/org/gnome/shell/extensions/panel-corners/">

        <!-- PANEL CORNERS -->
        <key type="b" name="panel-corners">
            <default>true</default>
            <summary>Whether or not to have rounded corners on the bottom of the panel</summary>
            <description />
        </key>

        <!-- PANEL CORNER RADIUS -->
        <key type="i" name="panel-corner-radius">
            <default>12</default>
            <summary>Radius of the rounded corners</summary>
            <description />
        </key>

        <!-- PANEL CORNER BORDER WIDTH -->
        <key type="i" name="panel-corner-border-width">
            <default>0</default>
            <summary>Additionnal width used for the corner</summary>
            <description />
        </key>

        <!-- PANEL CORNER BACKGROUND COLOR -->
        <key type="s" name="panel-corner-background-color">
            <default>"#000000ff"</default>
            <summary>Background color of the panel, must be a CSS text-color</summary>
            <description />
        </key>

        <!-- PANEL CORNER OPACITY -->
        <key type="d" name="panel-corner-opacity">
            <default>1</default>
            <summary>Opacity of the corner when not in overview</summary>
            <description />
        </key>

        <!-- SCREEN CORNERS -->
        <key type="b" name="screen-corners">
            <default>true</default>
            <summary>Whether or not to have rounded corners around the screen and on other monitors</summary>
            <description />
        </key>

        <!-- SCREEN CORNER RADIUS -->
        <key type="i" name="screen-corner-radius">
            <default>12</default>
            <summary>Radius of the rounded corners</summary>
            <description />
        </key>

        <!-- SCREEN CORNER BACKGROUND COLOR -->
        <key type="s" name="screen-corner-background-color">
            <default>"#000000ff"</default>
            <summary>Background color of the panel, must be a CSS text-color</summary>
            <description />
        </key>

        <!-- SCREEN CORNER OPACITY -->
        <key type="d" name="screen-corner-opacity">
            <default>1</default>
            <summary>Opacity of the corner</summary>
            <description />
        </key>

        <!-- FORCE EXTENSION VALUES -->
        <key type="b" name="force-extension-values">
            <default>true</default>
            <summary>Whether or not to force using extension values; otherwise themes may overwrite it</summary>
            <description />
        </key>

        <!-- DEBUG -->
        <key type="b" name="debug">
            <default>false</default>
            <summary>Boolean, set to true to activate debug mode (more verbose journalctl logs)</summary>
            <description />
        </key>

    </schema>
</schemalist>